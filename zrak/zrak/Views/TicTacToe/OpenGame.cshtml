@model zrak.Models.TicTacToeModel

<div class="text-center margin-top-10">
    <a style="height: 40px; width: 40px; margin-top: 5px; margin-bottom: 5px; font-size: 18px" asp-action="ChangeSpace" asp-controller="TicTacToe" class="btn btn-outline-dark" asp-route-space="0" asp-route-id="@Model.Id"><strong>@Model.BoardSpaces[0, 0]</strong></a>
    <a style="height: 40px; width: 40px; margin-top: 5px; margin-bottom: 5px; font-size: 18px" asp-action="ChangeSpace" asp-controller="TicTacToe" class="btn btn-outline-dark" asp-route-space="1" asp-route-id="@Model.Id"><strong>@Model.BoardSpaces[0, 1]</strong></a>
    <a style="height: 40px; width: 40px; margin-top: 5px; margin-bottom: 5px; font-size: 18px" asp-action="ChangeSpace" asp-controller="TicTacToe" class="btn btn-outline-dark" asp-route-space="2" asp-route-id="@Model.Id"><strong>@Model.BoardSpaces[0, 2]</strong></a>
    <br />
    <a style="height: 40px; width: 40px; margin-top: 5px; margin-bottom: 5px; font-size: 18px" asp-action="ChangeSpace" asp-controller="TicTacToe" class="btn btn-outline-dark" asp-route-space="3" asp-route-id="@Model.Id"><strong>@Model.BoardSpaces[1, 0]</strong></a>
    <a style="height: 40px; width: 40px; margin-top: 5px; margin-bottom: 5px; font-size: 18px" asp-action="ChangeSpace" asp-controller="TicTacToe" class="btn btn-outline-dark" asp-route-space="4" asp-route-id="@Model.Id"><strong>@Model.BoardSpaces[1, 1]</strong></a>
    <a style="height: 40px; width: 40px; margin-top: 5px; margin-bottom: 5px; font-size: 18px" asp-action="ChangeSpace" asp-controller="TicTacToe" class="btn btn-outline-dark" asp-route-space="5" asp-route-id="@Model.Id"><strong>@Model.BoardSpaces[1, 2]</strong></a>
    <br />
    <a style="height: 40px; width: 40px; margin-top: 5px; margin-bottom: 5px; font-size: 18px" asp-action="ChangeSpace" asp-controller="TicTacToe" class="btn btn-outline-dark" asp-route-space="6" asp-route-id="@Model.Id"><strong>@Model.BoardSpaces[2, 0]</strong></a>
    <a style="height: 40px; width: 40px; margin-top: 5px; margin-bottom: 5px; font-size: 18px" asp-action="ChangeSpace" asp-controller="TicTacToe" class="btn btn-outline-dark" asp-route-space="7" asp-route-id="@Model.Id"><strong>@Model.BoardSpaces[2, 1]</strong></a>
    <a style="height: 40px; width: 40px; margin-top: 5px; margin-bottom: 5px; font-size: 18px" asp-action="ChangeSpace" asp-controller="TicTacToe" class="btn btn-outline-dark" asp-route-space="8" asp-route-id="@Model.Id"><strong>@Model.BoardSpaces[2, 2]</strong></a>
    <br />
    <div class="alert alert-dark text-white">
        <a style="background-color: dimgrey; padding: 10px; border-radius: 5px">X Wins: @Model.XWins</a>
        <a style="background-color: dimgrey; padding: 10px; border-radius: 5px">O Wins: @Model.OWins</a>
        <a style="background-color: dimgrey; padding: 10px; border-radius: 5px">Ties: @Model.Ties</a>
    </div>
    <br />
    <a asp-action="TicTacToeView" asp-controller="TicTacToe" class="btn btn-primary">Back</a>
    <a asp-action="ResetGame" asp-controller="TicTacToe" asp-route-id="@Model.Id" class="btn btn-warning">Reset</a>
</div>