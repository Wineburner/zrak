@model zrak.Models.TicTacToeListModel
@{
    ViewData["Title"] = "Tic-Tac-Toe";
}

<div class="text-center">
    <a asp-action="CreateNewGame" asp-controller="TicTacToe" class="btn btn-primary" style="margin-bottom: 10px; margin-top: 10px;">New Game</a>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary" style="margin-bottom: 10px; margin-top: 10px;">Back</a>
    <div class="text-white">
        <a class="btn btn-secondary" style="margin-bottom: 10px; margin-top: 10px;">Total X Wins: @Model.TotalXWins</a>
        <a class="btn btn-secondary" style="margin-bottom: 10px; margin-top: 10px;">Total O Wins: @Model.TotalOWins</a>
        <a class="btn btn-secondary" style="margin-bottom: 10px; margin-top: 10px;">Total Ties: @Model.TotalTies</a>
    </div>
    @if (Model.Games != null)
    {
        <ul style="list-style: none;" class="list-group">
            @foreach (var x in @Model.Games)
            {
                <li class="list-group-item">
                    <a asp-action="OpenGame" asp-controller="TicTacToe" asp-route-id="@x.Id" class="btn btn-primary gap-2 col-6 text-truncate">@x.Id</a>
                    <a asp-action="DeleteGame" asp-controller="TicTacToe" asp-route-id="@x.Id" class="btn btn-danger">Delete</a>
                </li>
            }
        </ul>
    }
</div>

