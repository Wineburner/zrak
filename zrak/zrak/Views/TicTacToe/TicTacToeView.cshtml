@model zrak.Models.TicTacToeListModel
@{
    ViewData["Title"] = "Tic-Tac-Toe";
}

<div class="text-center">
    <a asp-action="CreateNewGame" asp-controller="TicTacToe" class="btn btn-primary" style="margin-bottom: 10px; margin-top: 10px;">New Game</a>
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary" style="margin-bottom: 10px; margin-top: 10px;">Back</a>
    <div class="text-white">
        <a style="margin-bottom: 10px; margin-top: 10px; background-color: dimgrey; padding: 8px; border-radius: 10px 0px 0px 10px">Total X Wins: @Model.TotalXWins</a>
        <a style="margin-bottom: 10px; margin-top: 10px; background-color: dimgray; padding: 8px;">Total O Wins: @Model.TotalOWins</a>
        <a style="margin-bottom: 10px; margin-top: 10px; background-color: dimgray; padding: 8px; border-radius: 0px 10px 10px 0px">Total Ties: @Model.TotalTies</a>
    </div>
    @if (Model.Games != null)
    {
    <ul style="list-style: none; margin-top: 10px" class="list-group">
        @foreach (var x in @Model.Games)
        {
        <li class="list-group-item" @(Model.GameCount++)>
            <div class="text-white">
                <a asp-action="OpenGame" asp-controller="TicTacToe" asp-route-id="@x.Id" class="btn btn-primary gap-2 col-4 text-truncate">Game @Model.GameCount</a>
                <a asp-action="DeleteGame" asp-controller="TicTacToe" asp-route-id="@x.Id" class="btn btn-danger">Delete</a>

                <a style="background-color: dimgrey; padding: 8px; vertical-align: middle; border-radius: 10px 0px 0px 10px; ">X Wins: @x.XWins</a>
                <a style="background-color: dimgray; padding: 8px; vertical-align: middle;">O Wins: @x.OWins</a>
                <a style="background-color: dimgray; padding: 8px; vertical-align: middle; border-radius: 0px 10px 10px 0px ">Ties: @x.Ties</a>
            </div>
        </li>
        }
    </ul>
    }
</div>

