@model zrak.Models.BlogListModel
@{
    ViewData["Title"] = "Blogs";
}

<div class="text-center">
    <blogListModel>
        @Model.Blogs
        <a asp-action="AddPost" asp-controller="Blog">Add Post</a>

        @if (Model.List != null)
        {
            @foreach (var x in @Model.List)
            { 
                <li><a asp-action="ViewPost" asp-controller="Blog">
                    @x.Title
                </a></li> 
            }
        }

    </blogListModel>
</div>

